<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_practical_test01_main"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.PracticalTest01MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/left_textView"
        android:saveEnabled="true"
        android:enabled="false"
        android:inputType="number"
        android:ems="7"
        android:gravity="center"
        android:layout_alignBottom="@+id/right_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/right_textView"
        android:saveEnabled="true"
        android:enabled="false"
        android:inputType="number"
        android:ems="7"
        android:gravity="center"
        android:layout_below="@+id/secod_activity_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_me"
        android:id="@+id/letf_button"
        android:layout_below="@+id/left_textView"
        android:layout_alignRight="@id/letf_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_me_too"
        android:id="@+id/right_button"
        android:layout_alignBottom="@+id/letf_button"
        android:layout_alignRight="@+id/right_textView"
        android:layout_alignEnd="@+id/right_textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary activity"
        android:id="@+id/secod_activity_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
